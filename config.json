{
    "scraping": {
        "base_url": "https://steamcommunity.com/market/listings/730/",
        "user_agents": [
            "Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:109.0) Gecko/20100101 Firefox/115.0",
            "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
            "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/119.0.0.0 Safari/537.36 Edg/119.0.0.0"
        ],
        "min_delay": 2.0,
        "max_delay": 5.0,
        "max_retries": 10,
        "request_timeout": 30,
        "save_progress": true,
        "progress_file": "scraping_progress.json",
        "use_vpn": true,
        "use_proxy": true,
        "proxy_sources": [
            "https://raw.githubusercontent.com/TheSpeedX/Proxy-List/master/http.txt",
            "https://raw.githubusercontent.com/ShiftyTR/Proxy-List/master/http.txt",
            "https://raw.githubusercontent.com/monosans/proxy-list/main/proxies/http.txt",
            "https://raw.githubusercontent.com/mertguvencli/http-proxy-list/main/proxy-list/data.txt",
            "https://raw.githubusercontent.com/clarketm/proxy-list/master/proxy-list-raw.txt"
        ],
        "proxy_test_url": "http://httpbin.org/ip",
        "proxy_test_timeout": 10,
        "min_working_proxies": 5,
        "proxy_check_interval": 300,
        "vpn_settings": {
            "mullvad_path": "C:\\Program Files\\Mullvad VPN\\resources\\mullvad.exe",
            "preferred_locations": ["us", "ca", "gb", "de", "fr"],
            "auto_rotate": true,
            "rotate_interval": 600
        }
    },
    "analysis": {
        "min_price": 0.03,
        "max_price": 100.0,
        "min_volume": 10,
        "min_listings": 5,
        "min_profit_margin": 15.0,
        "trade_up_rules": {
            "rarity_levels": [
                "Consumer Grade",
                "Industrial Grade",
                "Mil-Spec",
                "Restricted",
                "Classified",
                "Covert"
            ],
            "min_float_difference": 0.05,
            "max_float_difference": 0.15,
            "wear_ranges": {
                "Factory New": [0.00, 0.07],
                "Minimal Wear": [0.07, 0.15],
                "Field-Tested": [0.15, 0.38],
                "Well-Worn": [0.38, 0.45],
                "Battle-Scarred": [0.45, 1.00]
            }
        },
        "filters": {
            "exclude_stattrak": false,
            "exclude_souvenir": true,
            "min_success_chance": 60.0,
            "max_risk_level": "Medium"
        }
    },
    "logging": {
        "file": "app.log",
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "max_size": 5242880,
        "backup_count": 3,
        "log_to_file": true,
        "log_to_console": true
    },
    "ui": {
        "color_scheme": {
            "primary": "cyan",
            "secondary": "blue",
            "menu_selected": "bold cyan",
            "menu_unselected": "white",
            "success": "green",
            "error": "red",
            "warning": "yellow",
            "info": "blue"
        },
        "display": {
            "menu": {
                "main": [
                    "Analyze Market",
                    "Find Trade-Up Contracts",
                    "Settings",
                    "Help",
                    "Exit"
                ],
                "settings": [
                    "Scraping Settings",
                    "Analysis Settings",
                    "VPN Settings",
                    "Proxy Settings",
                    "UI Settings",
                    "Back to Main Menu"
                ],
                "scraping_settings": [
                    "Set Delay Range",
                    "Toggle Progress Saving",
                    "Set Request Timeout",
                    "Set Max Retries",
                    "Back to Settings"
                ],
                "analysis_settings": [
                    "Set Price Range",
                    "Set Volume Thresholds",
                    "Set Profit Margins",
                    "Configure Filters",
                    "Back to Settings"
                ]
            }
        },
        "refresh_rate": 4,
        "show_loading_animations": true,
        "show_progress_bars": true,
        "compact_mode": false
